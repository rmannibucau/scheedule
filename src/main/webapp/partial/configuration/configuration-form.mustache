{{>errors}}

<form class="form-horizontal" can-submit="{submit entry errors @event}">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Key</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" can-value="entry.key" placeholder="Key of the property"
                   data-toggle="tooltip" data-placement="bottom" title="A property key, should be unique">
        </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Value</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" can-value="entry.value" placeholder="Value of the property"
                   data-toggle="tooltip" data-placement="bottom" title="The property value">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-default">{{submitButtonText}}</button>
        </div>
    </div>
</form>
