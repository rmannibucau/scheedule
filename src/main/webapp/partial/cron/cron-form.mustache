{{>errors}}

<form class="form-horizontal" can-submit="{submit scheduling errors @event}">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" can-value="scheduling.name" placeholder="Name for this scheduling"
                   data-toggle="tooltip" data-placement="bottom" title="A unique name to identify this scheduling">
        </div>
    </div>
    <div class="form-group">
        <label for="cron" class="col-sm-2 control-label">Scheduling</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="cron" can-value="scheduling.cron" placeholder="* * * * *"
                   data-toggle="tooltip" data-placement="bottom" title="minute hour dayOfMonth month dayOfWeek">
        </div>
    </div>
    <div class="form-group">
        <label for="task" class="col-sm-2 control-label">Task</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="task" can-value="scheduling.task" placeholder="com.company.scheduling.MyTask"
                   data-toggle="tooltip" data-placement="bottom" title="The FQN or CDI name of a bean implementing Runnable">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-10 col-lg-offset-2" data-toggle="tooltip" data-placement="bottom" title="If checked this task will be started by the application.">
            <input type="checkbox" can-value="scheduling.state"> Activated
        </label>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-default">{{submitButtonText}}</button>
        </div>
    </div>
</form>
